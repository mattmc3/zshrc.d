#!/usr/bin/env zsh

0=${(%):-%N}
PROJ_HOME=${0:a:h:h}
export ZTAP_HOME=$PROJ_HOME/.ztap

[[ -d $ZTAP_HOME ]] ||
  git clone --depth 1 -q https://github.com/mattmc3/ztap.git $ZTAP_HOME

source $ZTAP_HOME/ztap3.zsh
if [[ $# -gt 0 ]]; then
  ztap3 --color "$@"
else
  ztap3 --color $PROJ_HOME/tests/*.zsh
fi
